<%- include('../partials/header', { title: 'Estadísticas de Acceso' }) %>

<div class="container mt-4">
  <h1>Panel de Administración</h1>

  <div class="card my-3">
    <div class="card-body">
      <h5 class="card-title">Total de accesos</h5>
      <p class="card-text fs-4"><strong><%= stats.totalAccesos %></strong></p>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Accesos por día</h5>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>Cantidad</th>
          </tr>
        </thead>
        <tbody>
          <% stats.accesosPorDia.forEach(dia => { %>
            <tr>
              <td><%= dia.fecha %></td>
              <td><%= dia.cantidad %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
