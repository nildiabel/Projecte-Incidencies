<%- include('../partials/header', { title: 'Llistat actuacions' }) %>
<div class="container mt-5">
<h1>Llistat d'actuacions</h1>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>ID</th>
      <th>Descripció</th>
      <th>Accions</th>
    </tr>
  </thead>
  <tbody>
    <% actuacions.forEach(actuacio => { %>
      <tr>
        <th scope="row"><%= actuacio.id %></th>
        <td><%= actuacio.descripcio_actuacio %></td>
        <td>
          <a href="/actuacions/<%= actuacio.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
          <a href="/actuacions/<%= actuacio.id %>/delete" class="btn btn-danger btn-sm">Eliminar</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<a href="/incidencies" class="btn btn-secondary ms-2">Cancel·lar</a>
</div>



<%- include('../partials/footer') %>
